{
  "permissions": {
    "allow": [
      "Bash(ast-grep:*)",
      "Bash(fd:*)",
      "Bash(git lg:*)",
      "Bash(git new:*)",
      "Bash(jq:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm run lint)",
      "Bash(rg:*)",
      "Bash(uv:*)",
      "Bash(yq:*)",
      "Read(~/.claude)",
      "Read(~/.config)",
      "Read(~/.zshrc)",
      "WebFetch(domain:ast-grep.github.io)",
      "WebFetch(domain:github.com)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ]
  }
}