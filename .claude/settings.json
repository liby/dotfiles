{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "respectGitignore": true,
  "cleanupPeriodDays": 99999,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_ENABLE_PROMPT_SUGGESTION": "0",
    "CLAUDE_CODE_ENABLE_UNIFIED_READ_TOOL": "1",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "125000",
    "CLAUDE_CODE_GLOB_HIDDEN": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1",
    "ENABLE_BACKGROUND_TASKS": "1",
    "ENABLE_LSP_TOOL": "1",
    "FORCE_AUTO_BACKGROUND_TASKS": "1",
    "FORCE_AUTOUPDATE_PLUGINS": "1",
    "IS_DEMO": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Edit",
      "Glob",
      "Grep",
      "mcp__ide__getDiagnostics",
      "mcp__plugin_context7_context7__query-docs",
      "mcp__plugin_context7_context7__resolve-library-id",
      "Read",
      "Skill(agent-browser)",
      "Task",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "deny": [
      "Edit(~/.gnupg/**)",
      "Edit(~/.ssh/**)",
      "Read(.env.local)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(~/.aws/**)",
      "Write(~/.gnupg/**)",
      "Write(~/.ssh/**)"
    ],
    "ask": [
      "Bash(git push:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "claude-opus-4-6",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/guard-secrets.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/sync-skills-symlink.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/detect-secrets-output.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "agent-browser@agent-browser": true,
    "context7@claude-plugins-official": true,
    "notebooklm-skill@vibe-coding-plugins": true,
    "planning-with-files@planning-with-files": true,
    "skill-codex@skill-codex": true,
    "utility-skills@baoyu-skills": true
  },
  "extraKnownMarketplaces": {
    "agent-browser": {
      "source": {
        "source": "github",
        "repo": "vercel-labs/agent-browser"
      }
    },
    "baoyu-skills": {
      "source": {
        "source": "github",
        "repo": "JimLiu/baoyu-skills"
      }
    },
    "planning-with-files": {
      "source": {
        "source": "github",
        "repo": "OthmanAdi/planning-with-files"
      }
    },
    "skill-codex": {
      "source": {
        "source": "github",
        "repo": "skills-directory/skill-codex"
      }
    },
    "supabase-agent-skills": {
      "source": {
        "source": "github",
        "repo": "supabase/agent-skills"
      }
    },
    "vibe-coding-plugins": {
      "source": {
        "source": "github",
        "repo": "liby/vibe-coding-plugins"
      }
    }
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowedDomains": [
        "*.anthropic.com",
        "*.github.com",
        "*.githubusercontent.com",
        "*.npmjs.org",
        "code.claude.com",
        "github.com"
      ],
      "allowAllUnixSockets": false,
      "allowLocalBinding": true
    },
    "excludedCommands": [
      "docker",
      "docker-compose",
      "dot",
      "git"
    ]
  },
  "spinnerTipsEnabled": false,
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Vibing"
    ]
  },
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": false,
  "showTurnDuration": false
}
