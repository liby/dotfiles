[user]
  email = 38807139+liby@users.noreply.github.com
  name = Bryan Lee

[alias]
  ca = commit -a --amend --no-edit
  cm = commit -m
  co = checkout
  pf = push --force
  sc = switch --create
  st = status
  undo = reset --hard HEAD

  ### diff ###
  dh = diff HEAD
  dc= "!git dh | pbcopy"
  ds = "!f() { git dh > /tmp/git_diff_head_$(date +\"%Y%m%d_%H%M_%S\").diff; }; f"

  ### log ###
  lg = log --graph --abbrev-commit --date=short --boundary --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %Cblue[%cn]%Creset'
  dl = "-c diff.external=difft log -p --ext-diff"

  ### rebase ###
  rb = rebase
  rbc = rebase --continue
  rbs = rebase --skip

  ### tag ###
  lt = describe --tags --abbrev=0

[branch]
  autosetuprebase = always

[core]
  attributesFile = ~/.config/git/attributes
  autocrlf = input
  editor = vim
  quotepath = false
  untrackedCache = true

[diff]
  external = difft
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  smudge = git-lfs smudge -- %f
  required = true

[filter "prototools"]
  clean = sed -e '/^node = /d' -e '/^pnpm = /d'
  smudge = cat
  required = true

[includeIf "gitdir:~/Code/GitHub/"]
  path = github.config

[includeIf "gitdir:~/Code/GitLab/"]
  path = gitlab.config

[includeIf "gitdir:~/Code/"]
  path = fsmonitor.config

[pager]
  difftool = true

[pull]
  rebase = true

[push]
  autoSetupRemote = true
